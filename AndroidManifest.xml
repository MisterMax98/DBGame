<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.samsung.itschool.dbgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:icon="@drawable/but"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HoFActivity"
            android:label="@string/title_activity_ho_f"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Statistic"
            android:label="@string/title_activity_statistic"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".PlayerStat"
            android:label="@string/title_activity_player_stat"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>